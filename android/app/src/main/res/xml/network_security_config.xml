<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for all domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific domains for better security -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Ngrok domains -->
        <domain includeSubdomains="true">ngrok-free.app</domain>
        <domain includeSubdomains="true">ngrok.io</domain>
        <domain includeSubdomains="true">ngrok.app</domain>
        
        <!-- Map tile servers -->
        <domain includeSubdomains="true">tile.openstreetmap.org</domain>
        <domain includeSubdomains="true">unpkg.com</domain>
        <domain includeSubdomains="true">cdnjs.cloudflare.com</domain>
        
        <!-- Routing API -->
        <domain includeSubdomains="true">router.project-osrm.org</domain>
        
        <!-- Allow localhost for development -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>